<div class="container">  
    {% if section.settings.section_title != blank %}
    <div class="container text-center pb-5">
        <h1>{{ section.settings.section_title | escape }}</h1>
    </div>
    {% endif %}
    <div class="row">
        {% for block in section.blocks %}
        <div class="col-sm-6 col-md-4 text-center">
            <div class="container img_testimonial">
                <img src="{{ block.settings.image_card | img_url: '183x183', crop: 'center' }}">
                <h2 class="pt-5">{{ block.settings.title_card }}</h2>
                <div class="text-content">
                    <P class="pb-5">
                        {{ block.settings.content_card }}
                    </P>
                </div>
            </div>
        </div>
        {% endfor %}        
    </div>
</div>

<style>
    .img_testimonial img {
        border-radius: 50% !important;
    }
</style>


{% schema %}
{
    "name": "Tarjetas del home",
    "max_blocks": 3,
    "settings": [
        {
        "type": "text",
        "id": "section_title",
        "label": "testimonial Section",
        "default": "WHAT OUR CLIENTS SAY'S"
        }
    ],
    "blocks": [
        {
        "type" : "text_block",
        "name" : "Customer Block",
        "settings" : [
            {
                "type":"image_picker",
                "id": "image_card",
                "label": "customer image"
            },
            {
                "type":"text",
                "id": "title_card",
                "label": "Customer name"
            },
            {
                "type":"richtext",
                "id": "content_card",
                "label": "customer testimonial"
            }
        ]}
    ],	
    "presets": [
        {
        "name": "customer content",
        "category": "Custom content",
        "blocks": [
            {
                "type": "text_block"
            },
            {
                "type": "text_block"
            },
            {
                "type": "text_block"
            }
        ]
    }
  ]
}
{% endschema %}